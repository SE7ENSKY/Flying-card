@import "nib"
@import "reset"

*,
*:before,
*:after
    box-sizing border-box

body, html
    height 100%
    min-height 100%

body
    background-color linear-gradient(to bottom, #f6f7fc 0%, #d5e1e8 40%)
    display table
    text-align center
    width 100%

.container
    display table-cell
    text-align center
    vertical-align middle

    list-style none
    margin 0
    padding 30px
    & li
        display inline-block
        margin 30px

///////////////////////////////////////////////////////

responsive-image()
    display block
    max-width 100%
    height auto

absolute-centering()
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.card
    &__link
        position relative
        display block
        text-decoration none
        width 100%
        height 100%

    &__shining
        position absolute
        top 0
        left 0
        right 0
        bottom 0

    &__base-layer
        responsive-image()

    &__additional-layer
        responsive-image()
        absolute-centering()

    &__title
        font: 600 20px\/1.4 'Open Sans', Helvetica, Arial, sans-serif
        color: #ffffff
        letter-spacing 1px
        position absolute
        bottom 9%
        left 0
        right 0
